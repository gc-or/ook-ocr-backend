{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "@dcloudio/types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue"
    ]
}